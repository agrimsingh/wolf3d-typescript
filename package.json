{
  "name": "wolf3d-typescript",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'lint not configured yet'",
    "format": "echo 'format not configured yet'",
    "wasm:build": "bash scripts/wasm/build-oracle.sh",
    "wasm:prepare:wolfsrc": "bash scripts/wasm/prepare-wolfsrc.sh",
    "wasm:probe:wolfsrc": "bash scripts/wasm/probe-wolfsrc-runtime.sh",
    "wasm:verify:compat": "bash scripts/wasm/verify-wolfsrc-compat.sh",
    "test": "vitest run",
    "test:property": "vitest run test/property",
    "test:property:local": "FAST_CHECK_NUM_RUNS=1000 vitest run test/property",
    "test:property:ci": "FAST_CHECK_NUM_RUNS=10000 vitest run test/property",
    "verify": "pnpm verify:assets && pnpm wasm:verify:compat && pnpm wasm:build && pnpm typecheck && pnpm test:property:local",
    "manifest:extract": "tsx scripts/manifest/extract-wolfsrc-symbols.ts",
    "runtime:manifest:extract": "pnpm wasm:build && tsx scripts/runtime/extract-runtime-manifest.ts",
    "runtime:manifest:verify": "pnpm runtime:manifest:extract && tsx scripts/runtime/verify-runtime-manifest.ts",
    "assets:fetch": "bash scripts/assets/fetch-wl1.sh",
    "assets:validate": "tsx scripts/assets/validate-wl1.ts",
    "verify:assets": "pnpm assets:validate"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^24.3.0",
    "fast-check": "^3.22.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^2.1.9",
    "tsx": "^4.20.5"
  }
}
